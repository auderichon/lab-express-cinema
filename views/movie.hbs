<div id="movie-details">
    <img src={{movie.image}} alt={{movie.title}}>
<div id="text-info">
    <a href="/movies">Go back</a>
    <h3>{{movie.title}}</h3>
    <br>
    <h4>Director: {{movie.director}}</h4>
    <br>
    <p class="bold">Stars</p>
    <br>
    <ul>
        {{#each movie.stars}}
        <li>{{this}}</li>
        {{/each}}
    </ul>
    <br>
    <p>{{movie.description}}</p>
    <br>
    <p>{{#each movie.showtimes}}
        {{this}} | 
        {{/each}}
    </p>
</div>
</div>
